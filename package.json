{
  "name": "scrouge",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun tailwindcss --watch -i ./src/index.css -o ./src/dist.css & bun --hot index.ts",
    "dev:tailwind": "bun tailwindcss --watch -i ./src/index.css -o ./src/dist.css",
    "dev:server": "bun --hot index.ts",
    "dev:backend": "convex dev",
    "build:css": "bun tailwindcss -i ./src/index.css -o ./src/dist.css",
    "build": "bun run build:css && bun build index.html --outdir dist",
    "lint": "tsc -p convex --noEmit --pretty false && tsc -p . --noEmit --pretty false && convex dev --once",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed"
  },
  "dependencies": {
    "@ai-sdk/mistral": "latest",
    "@ai-sdk/openai": "latest",
    "@ai-sdk/xai": "latest",
    "@convex-dev/auth": "^0.0.80",
    "ai": "latest",
    "clsx": "^2.1.1",
    "convex": "^1.24.2",
    "dexie": "^4.2.1",
    "dexie-react-hooks": "^4.2.0",
    "ollama-ai-provider-v2": "latest",
    "openai": "^6.15.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/cli": "^4.1.18",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1"
  }
}
