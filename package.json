{
  "name": "scrouge",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:backend": "convex dev",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "bun run index.ts",
    "lint": "biome check . && tsc -p convex --noEmit --pretty false && tsc -p . --noEmit --pretty false",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc -p convex --noEmit && tsc -p . --noEmit",
    "test": "bun test tests/",
    "test:unit": "bun test tests/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "build:analyze": "vite build --mode production && echo 'Bundle stats written to bundle-stats.html'",
    "changeset": "changeset",
    "version": "changeset version"
  },
  "dependencies": {
    "@ai-sdk/mistral": "^3.0.5",
    "@ai-sdk/openai": "^3.0.7",
    "@ai-sdk/xai": "^3.0.13",
    "@convex-dev/auth": "^0.0.90",
    "@mlc-ai/web-llm": "^0.2.80",
    "@t3-oss/env-core": "^0.13.10",
    "ai": "^6.0.27",
    "clsx": "^2.1.1",
    "convex": "^1.31.3",
    "dexie": "^4.2.1",
    "dexie-react-hooks": "^4.2.0",
    "ollama-ai-provider-v2": "^2.0.0",
    "openai": "^6.16.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.28.1",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.0.6",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "^7.3.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "*.{json,md,yaml,yml}": [
      "biome format --write --no-errors-on-unmatched"
    ]
  }
}
