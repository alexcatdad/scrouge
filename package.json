		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.18",
		"@types/jsdom": "^27.0.0",
		"@types/node": "^25.0.9",
		"@types/uuid": "^11.0.0",
		"@vitest/coverage-v8": "^4.0.17",
		"dotenv": "^17.2.3",
		"happy-dom": "^20.3.1",
		"jsdom": "^27.4.0",
		"nyc": "^17.1.0",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"uuid": "^13.0.0",
		"vite": "^7.2.6",
		"vite-plugin-istanbul": "^7.2.1",
		"vitest": "^4.0.17"
	},
	"dependencies": {
		"@ai-sdk/mistral": "^3.0.8",
		"@ai-sdk/openai": "^3.0.11",
		"@ai-sdk/xai": "^3.0.25",
		"@auth/core": "^0.37.0",
		"@convex-dev/auth": "^0.0.90",
		"@convex-dev/better-auth": "^0.10.10",
		"@mmailaender/convex-better-auth-svelte": "^0.5.0",
		"ai": "^6.0.37",
		"better-auth": "1.4.9",
		"convex": "^1.31.5",
		"convex-svelte": "^0.0.12",
		"ollama-ai-provider-v2": "^2.0.0",
		"zod": "^4.3.5"
