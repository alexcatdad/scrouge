{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":automergeMinor",
    ":automergeDigest",
    "group:allNonMajor",
    "schedule:weekends"
  ],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on monday"]
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "packageRules": [
    {
      "description": "Auto-merge patch updates for production dependencies",
      "matchUpdateTypes": ["patch"],
      "matchDepTypes": ["dependencies"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Auto-merge all dev dependency updates",
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Group React ecosystem updates",
      "matchPackagePatterns": ["^react", "^@types/react"],
      "groupName": "react"
    },
    {
      "description": "Group AI SDK updates",
      "matchPackagePatterns": ["^@ai-sdk/", "^ai$", "^openai$"],
      "groupName": "ai-sdk"
    },
    {
      "description": "Group Convex updates",
      "matchPackagePatterns": ["^convex", "^@convex-dev/"],
      "groupName": "convex"
    },
    {
      "description": "Group Tailwind updates",
      "matchPackagePatterns": ["^tailwind", "^@tailwindcss/"],
      "groupName": "tailwind"
    },
    {
      "description": "Group testing tool updates",
      "matchPackagePatterns": ["^@playwright/", "^playwright$"],
      "groupName": "testing"
    },
    {
      "description": "Group linting and formatting updates",
      "matchPackagePatterns": ["^@biomejs/", "^@commitlint/", "^husky$", "^lint-staged$"],
      "groupName": "linting"
    },
    {
      "description": "Require manual approval for major version updates",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["dependencies", "major"]
    },
    {
      "description": "Pin Biome to exact version for consistency",
      "matchPackageNames": ["@biomejs/biome"],
      "rangeStrategy": "pin"
    }
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "timezone": "UTC",
  "platformAutomerge": true
}
